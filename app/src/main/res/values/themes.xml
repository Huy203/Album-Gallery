<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlbumGallery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--Background-->
        <item name="android:background">@color/white</item>

        <!--Text color-->
        <item name="android:textColor">@color/black</item>

        <!--Button-->
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="android:buttonTint">@color/blue_500</item>

    </style>

    <style name="AppButton" parent="@style/Widget.Material3.Button.IconButton">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="AppBottomNavigationView" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="AppCheckbox" parent="@style/Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonIconTint">@color/black</item>
        <item name="buttonTint">@color/white</item>
    </style>


</resources>