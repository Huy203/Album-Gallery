<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fabAlignmentMode="center">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:justifyContent="space_around">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_zoom_in"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/zoom_in" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_zoom_out"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/zoom_out" />

            <!-- com.google.android.material.button.MaterialButton Rotate -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_rotate"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/refresh" />

            <!-- com.google.android.material.button.MaterialButton Cut -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_crop"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/crop" />

            <!-- com.google.android.material.button.MaterialButton Beautify -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_beautify"
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/beautiful" />

        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
