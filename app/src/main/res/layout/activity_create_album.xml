<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Album"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#61677A"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/editTextAlbumName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter album name..."
        android:textColorHint="#81689D"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:background="@drawable/border_edit_text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="#7C7C7C"/>

        <Button
            android:id="@+id/buttonChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewChooseImage"
            android:text="Select Image"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/button_background"/>

    </RelativeLayout>

</LinearLayout>