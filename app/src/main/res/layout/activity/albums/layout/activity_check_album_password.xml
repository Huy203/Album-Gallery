<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/backButtonAlbumPassword"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/previous_button"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/create_album" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#61677A"
        android:layout_marginBottom="100dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/albumNameAlbumPassword"
        android:text="Album name"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        app:endIconMode="password_toggle"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/inputAlbumPassword"
            android:layout_height="75dp"
            android:inputType="textPassword"
            android:textSize="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordError"
        android:text="(*) Album name"
        android:textSize="16dp"
        android:textColor="@color/red_500"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        />
    <Button
        style="@style/Widget.Material3.Button.TonalButton"
        android:id="@+id/enterAlbumPasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Enter password"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />



</LinearLayout>