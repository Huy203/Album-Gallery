<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlbumGallery" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--Background-->
        <item name="android:background">@color/black</item>

        <!--Text color-->
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppButton" parent="@style/Widget.Material3.Button.IconButton">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="AppBottomNavigationView" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="AppCheckbox" parent="@style/Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonIconTint">@color/white</item>
        <item name="buttonTint">@color/blue_500</item>
    </style>

    <style name="HeartShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>